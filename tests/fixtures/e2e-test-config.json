{
  "inputDir": "./tests/fixtures",
  "outputDir": "./tests/output/e2e",
  "pdf": {
    "enabled": true,
    "format": "A4",
    "orientation": "portrait",
    "margin": {
      "top": "25mm",
      "bottom": "25mm",
      "left": "20mm",
      "right": "20mm"
    },
    "displayHeaderFooter": true,
    "headerTemplate": "<div style=\"font-size: 9px; text-align: center; width: 100%;\"><span class=\"title\"></span></div>",
    "footerTemplate": "<div style=\"font-size: 9px; text-align: center; width: 100%; color: #666;\"><span class=\"pageNumber\"></span> / <span class=\"totalPages\"></span></div>",
    "includeToc": true,
    "includeCover": true,
    "coverTitle": "E2E Test Document",
    "coverSubtitle": "All Features Verification"
  },
  "mermaid": {
    "enabled": true,
    "theme": "default"
  },
  "plantuml": {
    "enabled": true,
    "server": "https://www.plantuml.com/plantuml",
    "format": "png"
  },
  "images": {
    "embed": true
  }
}
